		<input class="stext-103 cl2 plh4 size-116 p-l-28 p-r-55" placeholder="Upper Arm" name="upper_arm" type="text"
			required />

		<input class="stext-103 cl2 plh4 size-116 p-l-28 p-r-55" placeholder="Sleeve Length" name="sleeve_length"
			type="text" required />

		<input class="stext-103 cl2 plh4 size-116 p-l-28 p-r-55" placeholder="Sleeve Radius" name="sleeve_radius"
			type="text" required />

		<input class="stext-103 cl2 plh4 size-116 p-l-28 p-r-55" placeholder="Chest" name="chest" type="text"
			required />

		<input class="stext-103 cl2 plh4 size-116 p-l-28 p-r-55" placeholder="Waist" name="waist" type="text"
			required />

		<input class="stext-103 cl2 plh4 size-116 p-l-28 p-r-55" placeholder="Thigh" name="thigh" type="text"
			required />

		<input class="stext-103 cl2 plh4 size-116 p-l-28 p-r-55" placeholder="Leg" name="leg" type="text" required />

		<input class="stext-103 cl2 plh4 size-116 p-l-28 p-r-55" placeholder="Hips" name="hips" type="text" required />

